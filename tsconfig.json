{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "composite": true,
    "removeComments": true,
    "importHelpers": true,
    "downlevelIteration": true,
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "@deftr/api": ["../api/src"],
      "@deftr/server-mock-data": ["./packages/mock-data/src"],
      "@deftr/server-postgres": ["./packages/postgres/src"]
    },
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
